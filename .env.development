# Application Environment
APP_ENV=development
LOGGING_LEVEL=debug
LOGGING_FORMAT=text
DOCKER_ENV=true

# Development Admin Account (automatically created when running 'make db-migrate')
# Email: dev.admin@example.com
# Password: devadmin123
# Roles: admin, user
# Use this account for testing RBAC functionality and admin operations

# Service Ports
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8081

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=service_db
DATABASE_SSL_MODE=disable
# DATABASE_URL will be constructed in Makefile: postgres://postgres:postgres@postgres:5432/service_db?sslmode=disable

# Database Schema Configuration (per service)
USER_SERVICE_SCHEMA=user_service

# Docker Naming Configuration
DOCKER_PROJECT_PREFIX=service-boilerplate
DOCKER_IMAGE_PREFIX=docker

# Service-specific names
API_GATEWAY_NAME=api-gateway
USER_SERVICE_NAME=user-service
POSTGRES_NAME=postgres

# Derived names (exact values for Docker Compose)
API_GATEWAY_IMAGE=docker-api-gateway
USER_SERVICE_IMAGE=docker-user-service
API_GATEWAY_CONTAINER=service-boilerplate-api-gateway
USER_SERVICE_CONTAINER=service-boilerplate-user-service
POSTGRES_CONTAINER=service-boilerplate-postgres
NETWORK_NAME=service-boilerplate-network
POSTGRES_VOLUME=service-boilerplate-postgres-data
API_GATEWAY_TMP_VOLUME=service-boilerplate-api-gateway-tmp
USER_SERVICE_TMP_VOLUME=service-boilerplate-user-service-tmp
API_GATEWAY_LOGS_VOLUME=service-boilerplate-api-gateway-logs
USER_SERVICE_LOGS_VOLUME=service-boilerplate-user-service-logs
AUTH_SERVICE_LOGS_VOLUME=service-boilerplate-auth-service-logs

# Migration Service Configuration
MIGRATION_CONTAINER_NAME=service-boilerplate-migration
MIGRATION_TMP_VOLUME=service-boilerplate-migration-tmp
MIGRATION_IMAGE=migrate/migrate:latest
SERVICE_NAME=user-service

# Network Configuration
NETWORK_DRIVER=bridge

# auth-service Service Configuration
AUTH_SERVICE_SERVICE_NAME=auth-service
AUTH_SERVICE_SERVICE_PORT=8083
AUTH_SERVICE_SERVICE_IMAGE=docker-auth-service
AUTH_SERVICE_SERVICE_CONTAINER=service-boilerplate-auth-service
AUTH_SERVICE_SERVICE_TMP_VOLUME=service-boilerplate-auth-service-tmp
AUTH_SERVICE_SCHEMA=auth_service

# Monitoring Service Configuration
LOKI_CONTAINER=service-boilerplate-loki
PROMTAIL_CONTAINER=service-boilerplate-promtail
GRAFANA_CONTAINER=service-boilerplate-grafana

LOKI_IMAGE=grafana/loki:latest
PROMTAIL_IMAGE=grafana/promtail:latest
GRAFANA_IMAGE=grafana/grafana:latest

LOKI_DATA_VOLUME=service-boilerplate-loki-data
PROMTAIL_POSITIONS_VOLUME=service-boilerplate-promtail-positions
GRAFANA_DATA_VOLUME=service-boilerplate-grafana-data
JAEGER_DATA_VOLUME=service-boilerplate-jaeger-data
